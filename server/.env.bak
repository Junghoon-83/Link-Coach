# ==================== 환경 설정 ====================
APP_ENV=development
LOG_LEVEL=INFO

# ==================== 데이터베이스 ====================
POSTGRES_DB=linkcoach
POSTGRES_USER=linkcoach_user
POSTGRES_PASSWORD=linkcoach_pass
DATABASE_URL=postgresql://linkcoach_user:linkcoach_pass@postgres:5432/linkcoach

# ==================== ChromaDB ====================
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=leadership_clinical_data

# ==================== JWT 보안 ====================
# TODO: 프로덕션에서는 반드시 강력한 랜덤 문자열로 변경하세요
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-long-random-string-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================== Google Gemini API ====================
# TODO: Google AI Studio에서 API 키를 발급받아 입력하세요
# https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyAmCtRvFPJcbwmYooBT6EPCioe-zatprSc
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.9
GEMINI_MAX_TOKENS=4096

# ==================== ML 모델 ====================
ML_MODEL_PATH=models/leadership_classifier.pkl

# ==================== CORS ====================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ==================== RAG 설정 ====================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# ==================== 캐싱 ====================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# ==================== 스트리밍 ====================
STREAMING_CHUNK_SIZE=10
